---
import astroLogo from '../assets/astro.svg';
import background from '../assets/background.svg';
---

<main class="hero" role="main" aria-labelledby="hero-title">
		<img class="bg" src={background.src} alt="decorative background" aria-hidden="true" />

	<div class="hero-inner">
			<header class="brand">
				<img src={astroLogo.src} alt="Verbal logo" class="logo" />
				<h2 class="sr-only">Verbal language school</h2>
			</header>

		<section class="copy">
			<h1 id="hero-title">Verbal — Speak with confidence.</h1>
			<p class="tagline">Hands-on classes, native teachers, and a personalised path to fluency. Courses for kids, teens, and adults — online and in-person.</p>

			<div class="actions">
				<a class="btn primary" href="#enroll">Enroll now</a>
				<a class="btn ghost" href="#courses">See courses</a>
			</div>

			<ul class="languages" aria-label="Languages offered">
				<li>English</li>
				<li>Spanish</li>
				<li>French</li>
				<li>German</li>
				<li>Italian</li>
			</ul>
		</section>

		<aside class="features" aria-hidden="false">
			<div class="card">
				<strong>Small groups</strong>
				<span>Max 6 students — more speaking time.</span>
			</div>
			<div class="card">
				<strong>Native teachers</strong>
				<span>Real conversations, real progress.</span>
			</div>
			<div class="card">
				<strong>Personal plan</strong>
				<span>Assessments & targets tailored to you.</span>
			</div>
		</aside>
	</div>

	<a id="enroll" class="hidden-anchor" href="mailto:hello@verbal.school?subject=Enroll%20at%20Verbal">Enroll anchor</a>
</main>

<style>
	:root{ --bg:#0f1724; --glass:rgba(255,255,255,0.05); --accent:#7c3aed; --accent-2:#06b6d4; }
	.hero{position:relative; min-height:80vh; display:flex; align-items:center; justify-content:center; padding:4rem 1.5rem; color:#e6eef8; background:linear-gradient(180deg,#071124 0%,#071124 60%, #021018 100%); overflow:hidden;}
	.bg{position:absolute; right:-10%; top:-10%; width:60%; opacity:0.08; transform:rotate(-8deg); pointer-events:none}
	.hero-inner{position:relative; max-width:1100px; width:100%; display:grid; grid-template-columns:1fr 320px; gap:2rem; align-items:center;}
	.brand{display:flex; align-items:center; gap:0.75rem}
	.logo{width:48px; height:48px; filter:drop-shadow(0 6px 20px rgba(0,0,0,0.6));}

	.copy h1{font-size:clamp(1.8rem,4vw,3.4rem); margin:0 0 0.5rem; line-height:1.02; letter-spacing:-0.02em; background:linear-gradient(90deg,var(--accent),var(--accent-2)); -webkit-background-clip:text; background-clip:text; color:transparent;}
	.tagline{color:rgba(230,238,248,0.85); margin:0 0 1.25rem; font-size:1.05rem}

	.actions{display:flex; gap:0.75rem; align-items:center; margin-bottom:1rem}
	.btn{display:inline-block; padding:0.65rem 1rem; border-radius:10px; text-decoration:none; font-weight:600;}
	.btn.primary{background:linear-gradient(90deg,var(--accent),var(--accent-2)); color:#021018; box-shadow:0 8px 30px rgba(124,58,237,0.18); transform:translateY(0); transition:transform .18s ease, box-shadow .18s ease;}
	.btn.primary:hover{transform:translateY(-3px); box-shadow:0 18px 40px rgba(124,58,237,0.22)}
	.btn.ghost{background:transparent; color:#cfe8f3; border:1px solid rgba(255,255,255,0.06)}

	.languages{display:flex; gap:0.5rem; list-style:none; padding:0; margin:0; flex-wrap:wrap}
	.languages li{background:var(--glass); padding:0.35rem 0.6rem; border-radius:999px; font-size:0.9rem; color:#dbeffd}

	.features{display:flex; flex-direction:column; gap:1rem}
	.card{background:linear-gradient(180deg, rgba(255,255,255,0.03), rgba(255,255,255,0.02)); border-radius:14px; padding:1rem; backdrop-filter: blur(6px); box-shadow:inset 0 1px 0 rgba(255,255,255,0.02); border:1px solid rgba(255,255,255,0.03)}
	.card strong{display:block; font-size:1rem; margin-bottom:0.25rem}
	.card span{font-size:0.92rem; color:#cfe8f3}

	.hidden-anchor{position:absolute; left:-9999px; top:auto; width:1px; height:1px; overflow:hidden}

	/* responsive */
	@media (max-width:900px){
		.hero-inner{grid-template-columns:1fr; text-align:center}
		.features{flex-direction:row; justify-content:center}
	}

	/* small accessibility/helper */
	.sr-only{position:absolute!important;height:1px;width:1px;overflow:hidden;clip:rect(1px,1px,1px,1px);white-space:nowrap}
</style>